<vevol-tabs>
  <div class="container">
    <div class="tab-buttons">
      {% for tab in section.blocks %}
        <div class="tab-button" onclick="showTabContent({{ forloop.index0 }})">
          {{ tab.settings.heading }}
        </div>
      {% endfor %}
    </div>
    <div class="tab-content">
      {% for tab in section.blocks %}
        <div class="content">
          {{ tab.settings.content }}
        </div>
      {% endfor %}
    </div>
  </div>
</vevol-tabs>

<!-- part2 -->
<!-- liquid schema -->
{% schema %}
{
  "name": "Tabs section",
  "settings": [
    {
      "type": "text",
      "id": "section_heading",
      "label": "Section heading",
      "default": "Tabs section"
    }
  ],
  "blocks": [
    {
      "name": "Tab",
      "type": "tab",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Tab heading",
          "default": "Tab heading"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Tab content",
          "default": "<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Tabs",
      "blocks": [
        { "type": "tab" },
        { "type": "tab" },
        { "type": "tab" }
      ]
    }
  ]
}
{% endschema %}
