    <!-- liquid template -->
<vevol-tabs>
  <div class="tabs">
    <!-- Tab buttons -->
    <div class="tab-buttons">
      {% for block in section.blocks %}
        <button class="tab-button" data-tab="{{ forloop.index }}">
          {{ block.label }}
        </button>
      {% endfor %}
    </div>

    <!-- Tab content -->
    <div class="tab-content">
      {% for block in section.blocks %}
        <div class="inner-content" data-tab="{{ forloop.index }}">
          {{ block.content }}
        </div>
      {% endfor %}
    </div>
  </div>
</vevol-tabs>

<!-- part2 -->
<!-- liquid schema -->
{% schema %}
{
  "name": "Tabs section",
  "settings": [
    {
      "type": "text",
      "id": "section_heading",
      "label": "Section heading",
      "default": "Tabs section"
    }
  ],
  "blocks": [
    {
      "name": "Tab",
      "type": "tab",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Tab heading",
          "default": "Tab heading"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Tab content",
          "default": "<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Tabs",
      "blocks": [
        { "type": "tab" },
        { "type": "tab" },
        { "type": "tab" }
      ]
    }
  ]
}
{% endschema %}
